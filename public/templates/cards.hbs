{{#each products}}
    <article class="card__container">
        <div class="card-img-container">
            <img src="{{image}}" alt="" />
        </div>
        <div class="card-text">
            <h3>{{nombre}}</h3>
            <p>{{description}}</p>
            <p>${{price}}</p>
        </div>
        <a href="#" class="card-link">Add to cart</a>
    </article>
{{/each}}